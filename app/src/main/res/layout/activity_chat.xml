<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Chat">

    <!-- Header-->
    <View
        android:id="@+id/cuadrosuperior"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/background_degradado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRecibe"
        android:layout_width="86dp"
        android:layout_height="76dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:src="@mipmap/woman_perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namerecibe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Alma Lucia"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/cuadrosuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@mipmap/ubicacionfigma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fondo -->
    <View
        android:id="@+id/viewfondo1"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/fondo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- body-->
    <ImageView
        android:id="@+id/imgRecibe1"
        android:layout_width="90dp"
        android:layout_height="103dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:src="@mipmap/woman_perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recuadrotext1"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/bordemensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recuadrotextsend"
        android:layout_width="253dp"
        android:layout_height="55dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/bordesend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recuadroInvitacion"
        android:layout_width="250dp"
        android:layout_height="260dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/bordesend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textInvitacion"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:text="Te quiero invitar el dia: 00/00/00 a la hora: 12:00
        Am en el lugar: Plaza de las americas Para el restaurante : BBC
        Â¿Aceptas?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/recuadroInvitacion"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/recuadroInvitacion"
        app:layout_constraintTop_toTopOf="@+id/recuadroInvitacion" />

    <!-- Botones de si y no -->
    <Button
        android:id="@+id/aceptarInvitacion"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_todos"
        android:text="SI"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroInvitacion"
        app:layout_constraintStart_toStartOf="@+id/textInvitacion" />


    <Button
        android:id="@+id/negarInvitacion"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_todos"
        android:text="NO"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroInvitacion"
        app:layout_constraintEnd_toEndOf="@+id/textInvitacion" />

    <View
        android:id="@+id/editMensaje"
        android:layout_width="292dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/sentmessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iconsend"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="110dp"
        android:background="@mipmap/sent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enviar mensaje"
        android:textColor="#B56BDE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/editMensaje"
        app:layout_constraintEnd_toEndOf="@+id/editMensaje"
        app:layout_constraintStart_toStartOf="@+id/editMensaje"
        app:layout_constraintTop_toTopOf="@+id/editMensaje" />

    <!-- footer-->
    <View
        android:id="@+id/cuadroinferior"
        android:layout_width="419dp"
        android:layout_height="85dp"
        android:background="@drawable/background_degradado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="73dp"
        android:layout_height="58dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="12dp"
        android:background="@mipmap/casa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="@+id/cuadroinferior" />


    <ImageView
        android:id="@+id/message"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:background="@mipmap/mensaje"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/cuadroinferior"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginBottom="12dp"
        android:background="@mipmap/perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="@+id/cuadroinferior" />


</androidx.constraintlayout.widget.ConstraintLayout>