<?xml version="1.0" encoding="utf-8"?>
<!-- Código del diseño para mostrar mensajes enviados y recibidos -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TextView para mensajes enviados por ti -->
    <TextView
        android:id="@+id/textViewSentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordersend"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <!-- TextView para mensajes recibidos -->
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textViewReceivedMessage"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordermensaje"
        android:padding="8dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/black" />

        <!-- Imagen de perfil -->
    <ImageView
        android:id="@+id/imgRecibeChat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-70dp"
        android:src="@mipmap/woman_mensajes"
        />

</LinearLayout>